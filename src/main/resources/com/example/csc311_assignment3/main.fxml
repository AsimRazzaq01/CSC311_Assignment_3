<VBox alignment="CENTER" prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.csc311_assignment3.MazeController">
   <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS">
      <Tab text="Maze 1">
         <VBox alignment="CENTER">
            <Pane fx:id="maze1Pane" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <ImageView fx:id="maze1ImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" />
               <AnchorPane fx:id="robotAnchorPane" prefHeight="200.0" prefWidth="200.0" />
            </Pane>
            <VBox alignment="CENTER" prefHeight="140.0" prefWidth="700.0" style="-fx-background-color: #95c7f5;">
               <Button fx:id="startAnimationButton1" alignment="CENTER" mnemonicParsing="false" prefHeight="41.0" prefWidth="133.0" text="Start Animation" />
            </VBox>
         </VBox>
      </Tab>
      <Tab text="Maze 2">
         <VBox alignment="CENTER">
            <HBox alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
               <VBox prefHeight="331.0" prefWidth="110.0" HBox.hgrow="SOMETIMES" />
               <Pane fx:id="maze2Pane" maxWidth="1097.0" prefHeight="200.0" prefWidth="480.0" HBox.hgrow="ALWAYS">
                  <ImageView fx:id="maze2ImageView" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" />
                  <AnchorPane fx:id="carAnchorPane" prefHeight="200.0" prefWidth="200.0" />
               </Pane>
               <VBox prefHeight="331.0" prefWidth="110.0" HBox.hgrow="SOMETIMES" />
            </HBox>
            <VBox alignment="CENTER" prefHeight="140.0" prefWidth="700.0" style="-fx-background-color: #95c7f5;">
               <Button fx:id="startAnimationButton2" alignment="CENTER" mnemonicParsing="false" prefHeight="41.0" prefWidth="133.0" text="Start Animation" />
            </VBox>
         </VBox>
      </Tab>
   </TabPane>
</VBox>
